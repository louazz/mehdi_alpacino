<CustButton>:
    font_size: 32
    size_hint: 1, .3
    opacity: 0.5

<FloatLayout>:
    canvas.before:
        Rectangle:

            pos: self.pos
            size: self.size
            source: 'water1.png'
    StackLayout:
        orientation: "lr-tb"
        spacing: 10
        padding: 10
        size_hint: 0.4, 1
        pos_hint:{"x": 0, "top": 1}

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.4
            Rectangle:
                pos: self.pos
                size : self.size
                source: 'beer1.jpeg'

        CustButton:
            id: btn_2
            pos_hint: {"x": 0, "top": 1}
            on_press: root.newClient()

        Label:
            id: balance_label
            text: "0.0"
            font_size: 33
    BoxLayout:
        orientation: "vertical"
        size_hint: 0.4, 1
        pos_hint:{"right": 1, "top":1}

        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.4
            Rectangle:
                pos: self.pos
                size : self.size
                source: 'beer1.jpeg'

        CustButton:
            id: btn_id
            pos_hint: {"x": 0, "top": 1}
            on_press: root.deterministic()

        Label:
            id: Oz_label
            text : "0.0 Oz"
            font_size: 33
            size_hint: .4, .15
            pos_hint: {"center_x": 0.5, "top": 1}

        Label:
            id: OzPrice_label
            text:"0.4 DT/Oz"
            font_size: 20
            size_hint: .4, .3
            pos_hint: {"center_x": 0.5, "buttom": 0}
